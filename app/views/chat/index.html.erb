<div class="flex flex-col h-screen -mx-5">
  <!-- Chat Header -->
  <div class="bg-white shadow-sm border-b border-gray-200 p-4">
    <h1 class="text-xl font-semibold text-gray-900">AI Chat</h1>
  </div>

  <!-- Messages Container -->
  <div id="messages-container" class="flex-1 overflow-y-auto p-4 space-y-4">
    <% @messages.each do |message| %>
      <div class="flex <%= message.role == 'user' ? 'justify-end' : 'justify-start' %>">
        <div class="max-w-xs lg:max-w-md px-4 py-2 rounded-lg <%= message.role == 'user' ? 'bg-blue-500 text-white' : 'bg-white text-gray-900 shadow-sm border border-gray-200' %>">
          <% if message.file.attached? %>
            <div class="mb-2 p-2 bg-gray-100 rounded text-sm">
              ðŸ“„ <%= message.file.filename %>
            </div>
          <% end %>
          <p class="text-sm whitespace-pre-wrap"><%= message.content %></p>
          <p class="text-xs mt-1 <%= message.role == 'user' ? 'text-blue-100' : 'text-gray-500' %>">
            <%= message.created_at.strftime("%I:%M %p") %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>
